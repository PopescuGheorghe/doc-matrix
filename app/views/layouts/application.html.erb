<!DOCTYPE html>
<html>
	<head>
		<title>DocMatrix</title>
		<%= favicon_link_tag 'favicon.png' %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<%= render(:partial => 'layouts/header') unless  (params[:action] == 'index') %>
		<%= render(:partial => 'layouts/index_header') if (params[:action] == 'index') %>
		<%= flash_messages %>
		<%= yield %>
		<%= render 'layouts/footer' %>
	</div>
</body>
</html>