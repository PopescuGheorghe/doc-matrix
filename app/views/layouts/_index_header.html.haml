%body
  %header
    %nav.navbar.navbar-default
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a
            = link_to "MANI-DOC", root_path,class:"navbar-brand"
        / Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active= link_to 'Dashboard', root_path, class:"navbar-link"
            %li= link_to 'New Document', new_document_path, class:"navbar-link"
            %li
              = form_tag documents_path, :method => :get, :class => "navbar-form" do
                .input-append
                  = text_field_tag :search, params[:search], class: "form-control", required: "true"
                  = submit_tag "Search", :name => nil, class: "btn btn-primary search-button"
            %li.clear-margin
              = link_to "Clear"
          %p.navbar-user.pull-right
            - if user_signed_in?
              = succeed " - " do
                %strong= current_user.email
              = link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link'
              |
              \#{link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'}
            - else
              = link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
              |
              \#{link_to "Login", new_user_session_path, :class => 'navbar-link'}
        / /.navbar-collapse
      / /.container-fluid
