.container-fluid
  .row
    - if @document_results.present?
      - if params[:search] != nil
        %p.result
          Found #{@occurences} occurences of "
          %i>= params[:search]
          "
        = render :partial => 'search_results'
      - else
        .col-xs-offset-1.col-sm-4.col-md-4
          %table.table
            %thead
              %tr
                %th Title
                %th Owner
            %h3.center Other Documents
            %tbody
              - @other_documents.each do |document|
                %tr
                  %td= document.title
                  %td= document.user.email
                  %td= link_to 'View ', document
          .col-sm-offset-3.col-md-offset-3
            = will_paginate @document_results
        .col-sm-5.col-md-5.col-xs-offset-1
          %table.table
            %thead
              %tr
                %th Title
            %h3.center My Documents
            %tbody
              - @user_documents.each do |document|
                %tr
                  %td= document.title
                  %td= link_to 'View', document
                  %td= link_to 'Edit', edit_document_path(document) if can? :update, document
                  %td= link_to 'Delete', document, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, document

          .col-sm-offset-3.col-md-offset-3
            = will_paginate @user_documents
    - else
      %p.result
        There are no documents containing the term(s) #{params[:search]}.
