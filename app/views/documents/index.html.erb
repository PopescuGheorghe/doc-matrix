<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Owner</th>
          </tr>
        </thead>
        <h3 class="center">All Documents</h3>
        <tbody>
          <% if @result_documents.present? %>
          <% @result_documents.each do |document| %>
          <tr>
            <td><%= document.title %></td>
            <td><%= document.content[0..10] +"..." %></td>
            <td><%= document.user.email %></td>
            <td><%= link_to 'View', document %></td>
          </tr>
          <% end %>
        </tbody>
        
        <% else %>
        <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
        <% end %>
      </table>
      <div class="col-sm-offset-3 col-md-offset-3">
        <%= will_paginate @result_documents %>
      </div>
    </div>
    <div class="col-sm-5 col-md-5 col-xs-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Content</th>
          </tr>
        </thead>
        <h3 class="center">My Documents</h3>
        <tbody>
          <% @user_documents.each do |document| %>
          <tr>
            <td><%= document.title %></td>
            <td><%= document.content[0..10] +"..." %></td>
            <td><%= link_to 'View', document %></td>
            <td><%= link_to 'Edit', edit_document_path(document) if can? :update, document %></td>
            <td><%= link_to 'Delete', document, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, document %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="ol-sm-offset-3 col-md-offset-3">
        <%= will_paginate @user_documents %>
      </div>
    </div>
  </div>
</div>
</div>